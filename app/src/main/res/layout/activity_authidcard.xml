<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dolphin.renmaicircle.activity.personalcenter.AuthIDCardActivity">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="145pt">
        <ImageView
            android:layout_width="976pt"
            android:layout_height="1pt"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/linecolor"/>
        <com.dolphin.renmaicircle.widget.AlignTextView
            android:layout_width="220pt"
            android:layout_height="wrap_content"
            app:suffixMode="full_width"
            android:layout_marginLeft="52pt"
            android:layout_centerVertical="true"
            app:text="姓名："
            android:textColor="@color/color_333333"
            android:textSize="43pt" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="290pt"
            android:textColor="@color/color_666666"
            android:textSize="43pt"
            android:background="@null"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145pt"
        android:layout_below="@id/rl1">
        <ImageView
            android:layout_width="976pt"
            android:layout_height="1pt"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/linecolor"/>
        <com.dolphin.renmaicircle.widget.AlignTextView
            android:layout_width="220pt"
            android:layout_height="wrap_content"
            app:suffixMode="full_width"
            android:layout_marginLeft="52pt"
            android:layout_centerVertical="true"
            app:text="身份证号："
            android:textColor="@color/color_333333"
            android:textSize="43pt" />

        <EditText
            android:id="@+id/idnumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="290pt"
            android:textColor="@color/color_666666"
            android:textSize="43pt"
            android:background="@null"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="112pt"
        android:layout_marginLeft="60pt"
        android:layout_marginRight="60pt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70pt"
        android:background="@drawable/bg_themecolor_corner_56"
        android:textSize="46pt"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="下一步"/>

</RelativeLayout>
