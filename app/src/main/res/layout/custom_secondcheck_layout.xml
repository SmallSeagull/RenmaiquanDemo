<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="900pt"
    android:layout_height="500pt"
    android:background="@drawable/bg_ffffff_corner_14px">
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50pt"
        android:textColor="@color/color_333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140pt"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2pt"
        android:layout_marginTop="150pt"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50pt"
            android:textColor="@color/color_999999"
            android:text="取消"/>
        <ImageView
            android:layout_width="2pt"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="50pt"
            android:textColor="@color/themecolor"
            android:text="确定"/>

    </LinearLayout>
</LinearLayout>