<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="864pt"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_corner_14px">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="52pt"
        android:textColor="@color/color_333333"
        android:gravity="center_horizontal"
        android:layout_marginTop="65pt"
        android:text="请输入支付密码"/>

    <com.dolphin.renmaicircle.widget.PayPsdInputView
        android:id="@+id/password"
        android:layout_marginTop="100pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100pt"
        android:layout_marginRight="100pt"
        android:inputType="number"
        app:maxCount="6"
        app:psdType="bottomLine"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginTop="120pt"
        android:background="@color/themecolor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="46pt"
            android:background="@drawable/bg_dialog_cancel"
            android:textColor="@color/color_333333"
            android:text="取消"/>
        <ImageView
            android:layout_width="2pt"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="46pt"
            android:background="@drawable/bg_dialog_confirm"
            android:textColor="@color/white"
            android:text="确定"/>

    </LinearLayout>

</LinearLayout>