<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="864pt"
    android:layout_height="576pt"
    android:background="@drawable/bg_ffffff_corner_14px">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_marginLeft="109pt"
        android:layout_marginRight="109pt"
        android:layout_marginTop="110pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="43pt"
            android:textColor="@color/color_333333"
            android:text="数量："/>
        <EditText
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv1"
            android:layout_marginLeft="20pt"
            android:textSize="43pt"
            android:background="@null"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/color_333333"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:src="@color/linecolor"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_marginLeft="109pt"
        android:layout_marginRight="109pt"
        android:layout_marginTop="60pt"
        android:layout_below="@id/rl1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="43pt"
            android:textColor="@color/color_333333"
            android:text="密码："/>
        <com.dolphin.renmaicircle.widget.PayPsdInputView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv2"
            android:layout_marginLeft="20pt"
            android:textColor="@color/color_333333"
            android:inputType="number"
            app:maxCount="6"
            app:psdType="bottomLine"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144pt"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_cancel_bg"
            android:textSize="46pt"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="取消"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_confirm_bg"
            android:textSize="46pt"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="确定"/>

    </LinearLayout>

</RelativeLayout>