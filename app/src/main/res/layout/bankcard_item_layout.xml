<?xml version="1.0" encoding="utf-8"?>
<com.dolphin.renmaicircle.widget.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="275pt"
    android:background="@color/white">
        <!--银行卡片-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--银行-->
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56pt"
                android:layout_marginTop="40pt"
                android:textSize="46pt"
                android:textColor="@color/color_333333"
                android:text="中国建设银行"/>
            <!--银联-->
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="53pt"
                android:layout_alignBottom="@id/tv1"
                android:textSize="40pt"
                android:textColor="@color/color_666666"
                android:text="银联"/>

            <!--卡号-->
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56pt"
                android:layout_marginTop="170pt"
                android:textSize="46pt"
                android:textColor="@color/color_333333"
                android:text="****    ****    ****    0130"/>

        </RelativeLayout>

        <!--删除按钮-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/delete"
                android:text="删除"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="190pt"
                android:layout_height="match_parent"
                android:textSize="46pt"
                android:background="@color/color_ff4957"/>
        </LinearLayout>
</com.dolphin.renmaicircle.widget.SwipeItemLayout>