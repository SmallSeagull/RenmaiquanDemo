<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="976pt"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ffffff_corner_14px">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="46pt"
        android:textColor="@color/color_333333"
        android:gravity="center_horizontal"
        android:layout_marginTop="64pt"
        android:text="设置钱包密码"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="43pt"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="100pt"
        android:layout_marginTop="60pt"
        android:text="设置密码"/>

    <com.dolphin.renmaicircle.widget.PayPsdInputView
        android:id="@+id/password_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100pt"
        android:layout_marginRight="100pt"
        android:inputType="number"
        app:maxCount="6"
        app:psdType="bottomLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="43pt"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="100pt"
        android:layout_marginTop="60pt"
        android:text="确认密码"/>

    <com.dolphin.renmaicircle.widget.PayPsdInputView
        android:id="@+id/password_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100pt"
        android:layout_marginRight="100pt"
        android:inputType="number"
        app:maxCount="6"
        app:psdType="bottomLine"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_marginTop="70pt"
        android:background="@color/linecolor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166pt"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="43pt"
            android:textColor="@color/color_333333"
            android:text="取消"/>
        <ImageView
            android:layout_width="2pt"
            android:layout_height="match_parent"
            android:background="@color/linecolor"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="43pt"
            android:textColor="@color/color_333333"
            android:text="确定"/>

    </LinearLayout>


</LinearLayout>