<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="50pt"
    android:paddingRight="50pt"
    android:paddingBottom="40pt"
    android:background="@drawable/bg_ffffff_corner_14px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40pt">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40pt"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:text="随遇而安的猜想"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2018-08-01"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_marginTop="30pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="35pt"
        android:textColor="@color/color_666666"
        android:text="洗刷刷啦爱啦啦爱啦啦啊啦啦啦大手大脚科技"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="405pt"
        android:layout_marginTop="40pt"
        fresco:roundedCornerRadius="14pt"
        fresco:backgroundImage="@color/secondcolor"
        android:scaleType="centerCrop"/>



</LinearLayout>