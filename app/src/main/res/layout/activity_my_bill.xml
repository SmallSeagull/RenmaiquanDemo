<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dolphin.renmaicircle.activity.personalcenter.MyBillActivity">

    <android.support.design.widget.TabLayout
        android:background="@color/white"
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="156pt"
        app:tabIndicatorColor="@color/secondcolor"
        app:tabIndicatorHeight="6pt"
        app:tabSelectedTextColor="@color/color_333333"
        app:tabTextColor="@color/color_333333"
        app:tabTextAppearance ="@style/TabLayoutTextStyle">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
