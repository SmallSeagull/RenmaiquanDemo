<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.dolphin.renmaicircle.activity.personalcenter.AuthCardDetailActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130pt"
        android:layout_marginRight="130pt"
        android:textSize="40pt"
        android:layout_marginTop="80pt"
        android:textColor="@color/color_999999"
        android:text="注：身份信息提交后一旦认证成功将无法篡改，请用本人的身份证进行认证。"/>

    <LinearLayout
        android:layout_width="360pt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="316pt"
        android:layout_marginLeft="86pt">
        <ImageView
            android:id="@+id/idcard_front"
            android:layout_width="match_parent"
            android:layout_height="260pt"
            android:background="@drawable/ic_persona_certification_zmz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:textSize="43pt"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="上传身份证正面照"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="360pt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="316pt"
        android:layout_alignParentRight="true"
        android:layout_marginRight="86pt">
        <ImageView
            android:id="@+id/idcard_reverse"
            android:layout_width="match_parent"
            android:layout_height="260pt"
            android:background="@drawable/ic_persona_certification_fmz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30pt"
            android:textSize="43pt"
            android:textColor="@color/color_333333"
            android:gravity="center"
            android:text="上传身份证反面照"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="360pt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="815pt"
        android:layout_centerHorizontal="true">
    <ImageView
        android:id="@+id/idcard_hand"
        android:layout_width="match_parent"
        android:layout_height="260pt"
        android:background="@drawable/ic_persona_certification_sc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30pt"
        android:textSize="43pt"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:text="上传手持身份证照"/>
    </LinearLayout>

    <TextView
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="112pt"
        android:layout_marginLeft="60pt"
        android:layout_marginRight="60pt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70pt"
        android:background="@drawable/bg_themecolor_corner_56"
        android:textSize="46pt"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="提交审核"/>



</RelativeLayout>
