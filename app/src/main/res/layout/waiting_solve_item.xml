<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="216pt"
    android:background="@drawable/bg_ffffff_corner_14px">
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="115pt"
        android:layout_height="115pt"
        android:layout_centerVertical="true"
        android:layout_marginLeft="52pt"
        android:background="@drawable/ic_persona_test_avatar"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="173pt"
        android:layout_height="58pt"
        android:textSize="35pt"
        android:textColor="@color/white"
        android:background="@drawable/bg_themecolor_corner_29pt"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="52pt"
        android:text="添加"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="400pt"
        android:ellipsize="end"
        android:layout_marginLeft="197pt"
        android:layout_marginTop="50pt"
        android:textSize="40pt"
        android:textColor="@color/color_333333"
        android:text="随遇而安请求加你"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="400pt"
        android:ellipsize="end"
        android:layout_marginLeft="197pt"
        android:layout_marginTop="125pt"
        android:textSize="35pt"
        android:textColor="@color/color_666666"
        android:text="我是萧十一郎"/>

    

</RelativeLayout>