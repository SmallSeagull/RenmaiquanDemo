<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybackground"
    tools:context="com.dolphin.renmaicircle.activity.personalcenter.RechargeActivity">
    <!--充值金额-->
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="518pt"
        android:layout_marginTop="30pt"
        android:layout_marginLeft="26pt"
        android:layout_marginRight="26pt"
        android:background="@drawable/bg_ffffff_corner_14px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="46pt"
            android:textColor="@color/color_333333"
            android:layout_marginTop="64pt"
            android:layout_marginLeft="50pt"
            android:text="充值金额"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="255pt"
            android:layout_marginLeft="50pt"
            android:textSize="66pt"
            android:textColor="@color/color_333333"
            android:text="¥"/>
        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv"
            android:layout_toRightOf="@id/tv"
            android:inputType="number"
            android:textSize="66pt"
            android:background="@null"
            android:paddingLeft="15pt"
            android:textColor="@color/color_333333"/>

    </RelativeLayout>

    <!--充值方式-->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/rl1"
        android:layout_marginTop="200pt">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="match_parent"
            android:layout_height="120pt"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/payradioselector"
            android:drawableLeft="@drawable/ic_wechat_small"
            android:drawablePadding="30pt"
            android:paddingLeft="75pt"
            android:paddingRight="75pt"
            android:text="微信支付"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="40pt" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="match_parent"
            android:layout_height="120pt"
            android:button="@null"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/payradioselector"
            android:drawableLeft="@drawable/ic_alipay_small"
            android:drawablePadding="30pt"
            android:paddingLeft="75pt"
            android:paddingRight="75pt"
            android:text="支付宝支付"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="40pt" />
    </RadioGroup>

    <TextView
        android:id="@+id/next"
        android:layout_width="959pt"
        android:layout_height="112pt"
        android:background="@drawable/bg_themecolor_corner_56"
        android:text="下一步"
        android:layout_centerHorizontal="true"
        android:textSize="46pt"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70pt"/>

</RelativeLayout>
