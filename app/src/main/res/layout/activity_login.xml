<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dolphin.renmaicircle.activity.register.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="750pt"
        android:src="@drawable/login_background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210pt"
        android:paddingLeft="69pt"
        android:paddingRight="69pt">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_alignParentBottom="true"
            android:src="@color/linecolor"/>
        <ImageView
            android:layout_width="27pt"
            android:layout_height="45pt"
            android:src="@drawable/ic_login_phone"
            android:layout_marginLeft="26pt"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50pt"/>
        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50pt"
            android:layout_marginLeft="90pt"
            android:background="@null"
            android:maxLines="1"
            android:hint="请输入账号"
            android:textSize="40pt"
            android:inputType="number"
            android:textColorHint="@color/textcolor_hint"
            android:textColor="@color/textcolor"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="176pt"
        android:paddingLeft="69pt"
        android:paddingRight="69pt">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:layout_alignParentBottom="true"
            android:src="@color/linecolor"/>
        <ImageView
            android:layout_width="29pt"
            android:layout_height="35pt"
            android:src="@drawable/ic_login_password"
            android:layout_marginLeft="26pt"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45pt"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45pt"
            android:layout_marginLeft="90pt"
            android:background="@null"
            android:maxLines="1"
            android:hint="请输入密码"
            android:textSize="40pt"
            android:inputType="textPassword"
            android:digits="@string/password_type"
            android:textColorHint="@color/textcolor_hint"
            android:textColor="@color/textcolor"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码?"
        android:textColor="@color/textcolor_hint"
        android:layout_marginTop="59pt"
        android:layout_gravity="right"
        android:layout_marginRight="69pt"
        android:textSize="40pt"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="959pt"
        android:layout_height="112pt"
        android:background="@drawable/bg_second_corner_56"
        android:text="登 录"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="46pt"
        android:textColor="@color/white"
        android:layout_marginTop="84pt"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="959pt"
        android:layout_height="112pt"
        android:background="@drawable/bg_white_stroke_second__corner_56"
        android:text="立即注册"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="43pt"
        android:textColor="@color/secondcolor"
        android:layout_marginTop="59pt"/>



</LinearLayout>
